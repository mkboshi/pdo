{% if val %}
    <label>Все значения, содержащие {{val}}</label>
{% endif %}
<br>
{% if t %}
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Ник</th>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Возраст</th>
        </tr>
        </thead>
        <tbody>
        {%  for row in t %}
            <tr>
                <td>{{row.db_id}}</td>
                <td>{{row.db_nickname}}</td>
                <td>{{row.db_name}}</td>
                <td>{{row.db_surname}}</td>
                <td>{{row.db_age}}</td>
            </tr>
        {%  endfor %}
        </tbody>
    </table>
{% endif %}
<style>
    label {
        margin-bottom: 4px;
        font-size: 18px;
        font-weight: 700;
        color: black;
    }
    .table {
        width: 30%;
        margin-bottom: 20px;
        border: 5px solid #fff;
        border-top: 5px solid #fff;
        border-bottom: 3px solid #fff;
        border-collapse: collapse;
        outline: 3px solid #ffd300;
        font-size: 15px;
        background: #fff!important;
    }
    .table th {
        font-weight: bold;
        padding: 7px;
        background: #ffd300;
        border: none;
        text-align: left;
        font-size: 15px;
        border-top: 3px solid #fff;
        border-bottom: 3px solid #ffd300;
    }
    .table td {
        padding: 7px;
        border: none;
        border-top: 3px solid #fff;
        border-bottom: 3px solid #fff;
        font-size: 15px;
    }
    .table tbody tr:nth-child(even){
        background: #f8f8f8!important;
    }
</style>